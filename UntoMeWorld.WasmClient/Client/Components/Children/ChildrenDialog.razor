@using UntoMeWorld.WasmClient.Client.Components.Base.Buttons
@inherits BaseDialog<UntoMeWorld.Domain.Model.Child, bool>

<div class="dialog">
    <div class="dialog-header">
        <h5 class="text title text-primary font-bold m-0">
            @(IsNewChild ? "New Child" : "Edit Child")
        </h5>
    </div>

    <div class="dialog-content">

        <div class="container p-0">
            <h5 class="text-base font-semiBold text-normal">
                Personal Information
            </h5>
            <div class="row">

                <div class="col-12 col-md-6">
                    <div class="input">
                        <label>Name</label>
                        <input type="text">
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="input">
                        <label>Lastname</label>
                        <input type="text">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Age</label>
                        <input type="text">
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Grade</label>
                        <input type="number">
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Gender</label>
                        <DropDown TItem="string" Options="@(new List<DropDownOption<string>> { new("Female", "Female"), new("Male", "Male") })">
                        </DropDown>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Church</label>
                        <DropDown TItem="string" Options="@(new List<DropDownOption<string>> { new("Female", "Female"), new("Male", "Male") })">
                        </DropDown>
                    </div>
                </div>
            </div>


            <h5 class="text-base font-semiBold text-normal mt-3">
                Sizes
            </h5>
            <div class="row">
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Top</label>
                        <input type="number">
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Waist</label>
                        <DropDown TItem="string" Options="@(new List<DropDownOption<string>> { new("Female", "Female"), new("Male", "Male") })">
                        </DropDown>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Shoes</label>
                        <input type="text">
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Underwear</label>
                        <DropDown TItem="string" Options="@(new List<DropDownOption<string>> { new("Female", "Female"), new("Male", "Male") })">
                        </DropDown>
                    </div>
                </div>
            </div>

            <h5 class="text-base font-semiBold text-normal mt-3">
                Other information
            </h5>
            <div class="row">
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Sponsored</label>
                        <DropDown TItem="bool" Options="@(new List<DropDownOption<bool>> { new(true, "Yes"), new(false, "No") })">
                        </DropDown>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Uniforms Count</label>
                        <input type="number">
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Receives shoes</label>
                        <DropDown TItem="bool" Options="@(new List<DropDownOption<bool>> { new(true, "Yes"), new(false, "No") })">
                        </DropDown>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="input">
                        <label>Receives xmas gift</label>
                        <DropDown TItem="bool" Options="@(new List<DropDownOption<bool>> { new(true, "Yes"), new(false, "No") })">
                        </DropDown>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="input">
                        <label>Notes</label>
                        <textarea rows="2"></textarea>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="dialog-footer">

        <Button
            Text="Cancel"
            OnClick="Close"
            IconName="@PhosphorIcons.XCircle">
        </Button>

        <Button
            Text="Save"
            Style="@ButtonStyle.Primary"
            IconName="@PhosphorIcons.FloppyDisk">
        </Button>
    </div>

</div>

@code {

    private bool IsNewChild => Parameter == default;

    private async Task Close()
    {
        await OnCloseAsync(false);
    }

}