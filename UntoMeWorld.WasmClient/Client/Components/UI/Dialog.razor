

<div class="dialog @(IsOpen ? "show" : "")">
    <div class="header">
        <h3>@Title</h3>
        <button class="material-icons dialog-toggle close" @onclick="Hide">
            close
        </button>
    </div>
    @Content
</div>

@code {
    [Parameter]
    public RenderFragment Content { get; set; }

    public string Title { get; set; } = "";
    
    public bool IsOpen { get; set; }

    public void Show()
    {
        IsOpen = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsOpen = false;
        StateHasChanged();
    }
}