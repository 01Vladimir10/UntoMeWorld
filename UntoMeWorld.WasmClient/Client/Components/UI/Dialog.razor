

<div class="dialog @(IsOpen ? "show" : "")">
    <div class="button-container">
        <button class="material-icons dialog-toggle" @onclick="Hide">
            close
        </button>
    </div>
    
    @Content
</div>

@code {
    [Parameter]
    public RenderFragment Content { get; set; }
    
    public bool IsOpen { get; set; }

    public void Show()
    {
        IsOpen = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsOpen = false;
        StateHasChanged();
    }
}