{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Services": {
    "RolesService": {
      "EnableCaching": false,
      "CacheLifeTimeInSeconds": 1
    },
    "UsersService": {
      "EnableCaching": false,
      "CacheLifeTimeInSeconds": 1
    },
    "TokensService": {
      "EnableCaching": false,
      "ValidateTokensInDatabase": true,
      "CacheLifeTimeInSeconds": 900
    },
    "AuthorizationService": {
      "PermissionSelectionMode": "LeastPermissive",
      "RoleSelectionMode": "MostPermissive"
    }
  }
}
