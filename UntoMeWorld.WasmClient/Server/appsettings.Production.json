{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Services": {
    "RolesService": {
      "EnableCaching": false,
      "CacheLifeTimeInSeconds": 1
    },
    "UsersService": {
      "EnableCaching": false,
      "CacheLifeTimeInSeconds": 1
    },
    "TokensService": {
      "EnableCaching": true,
      "ValidateTokensInDatabase": true,
      "CacheLifeTimeInSeconds": 900
    },
    "AuthorizationService": {
      "ReadActions": ["All", "Get", "Query", "QueryDeletedElements"],
      "DeleteActions": ["Delete", "BulkDelete"],
      "UpdateActions": ["Update", "BulkUpdate"],
      "AddActions": ["Insert", "BulkInsert", "Add"],
      "RestoreActions": ["Restore"],
      "PurgeActions": ["PermanentlyDelete"],
      "SpecialActions": null,
      "PermissionSelectionMode": "MostSpecific",
      "RoleSelectionMode": "MostPermissive"
    }
  }
}
